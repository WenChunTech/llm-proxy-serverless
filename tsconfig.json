{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "pkg/**/*",
    "src/**/*",
    "public/**/*"
  ],
  "exclude": [
    "node_modules",
    "pkg",
    "dist",
    "tests/**/*"
  ]
}